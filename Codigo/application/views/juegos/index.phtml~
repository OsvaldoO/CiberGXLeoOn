<h2>Ultimos Juegos</h2>

<?php if(isset($this->juegos) && count($this->juegos)) : ?>

<article>
    <?php for($i = 0; $i < count($this->juegos); $i++): ?>
    <section>
    <h3><strong><?php echo $this->juegos[$i]['nombre']; ?></strong></h3>
    <p><?php echo $this->juegos[$i]['genero']; ?></p>
    <p><?php echo $this->juegos[$i]['cantidad']; ?></p>
	  <p><?php echo $this->juegos[$i]['popularidad']; ?></p>
	  <p><?php echo $this->juegos[$i]['imagen']; ?></p>
			<a href="<?php echo BASE_URL . 'juegos/editar/' . $this->juegos[$i]['nombre']; ?>">Editar</a>
    	<a href="<?php echo BASE_URL . 'juegos/eliminar/' . $this->juegos[$i]['nombre']; ?>">Eliminar</a>   
    <?php endfor;?>
    </section>
</article>

<?php else: ?>

<p><strong>No hay Juegos!</strong></p>

<?php endif; ?>

<?php if(Session::accesoViewEstricto(array('usuario'))): ?>
<p><a href="<?php BASE_URL; ?>juegos/nuevo">Agregar Juegos</a></p>

