<h2>Usuarios Registrados</h2>

<?php if(isset($this->usuarios) && count($this->usuarios)) : ?>

<article>
			<table class="muestra" style="border:solid black">
    <?php for($i = 0; $i < count($this->usuarios); $i++): ?>
    <section>
				<tr>
				<th><h3><strong><?php echo $this->usuarios[$i]['nick']; ?></strong></h3></th>
				<td><?php echo $this->usuarios[$i]['nombre']; ?></td>
				<td><?php echo $this->usuarios[$i]['email']; ?></td>
				<td><?php echo $this->usuarios[$i]['rol']; ?></td>
				<td><?php echo $this->usuarios[$i]['avatar']; ?></td>
				<td><?php echo $this->usuarios[$i]['puntos']; ?></td>
				<td><?php echo $this->usuarios[$i]['credito']; ?></td> 
				<td><a href="<?php echo BASE_URL . 'usuario/editar/' . $this->usuarios[$i]['nick']; ?>">Editar</a></td>
    		<td><a href="<?php echo BASE_URL . 'usuario/eliminar/' . $this->usuarios[$i]['nick']; ?>">Eliminar</a></td>
    		</tr>   
    <?php endfor;?>
    		</table>  
    </section>
</article>

<?php else: ?>

<p><strong>No hay Usuarios!</strong></p>

<?php endif; ?>

<?php if(Session::accesoViewEstricto(array('usuario'))): ?>
<p><a href="<?php BASE_URL; ?>usuarios/registrar">Registrar usuario</a></p>

<?php endif ?>