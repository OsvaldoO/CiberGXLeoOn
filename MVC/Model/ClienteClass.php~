<?php

class ClienteClass{
	//Atributos
	private $nick;
	private $nombre;
	private $email;
	private $password;
	private $puntos;
	private $credito;
	private $avatar;
	
	function __construct($ni, $no, $em, $pa, $av = 'default.png', $pu = 0, $cr = 0)
	{
		$this->nick = $ni;
		$this->nombre = $no;
		$this->email = $em;
		$this->password = $pa;
		$this->puntos = $pu;
		$this->credito = $cr;
		$this->avatar = $av;
	}
}
?>